<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AnalysisLevel>latest-all</AnalysisLevel>
    <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
    <Title>Hosted Services (Jobs)</Title>
    <Authors>.NET Essentials</Authors>
    <Company>.NET Essentials</Company>
    <Description>A `Scoped` service resolver.</Description>
    <RepositoryUrl>https://github.com/dotnet-essentials/Kwality.DI.Scoped.git</RepositoryUrl> 
    <RepositoryType>git</RepositoryType> 
    <PackageIcon>Properties\Resources\Icon.png</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="6.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Properties\Resources\Icon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
